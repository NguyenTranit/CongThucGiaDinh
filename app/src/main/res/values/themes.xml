<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CongThucGiaDinh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!--        windowBackground - Màu của nền màn hình.-->
    <!--        colorPrimary - Màu của thanh ứng dụng.-->
    <!--        colorPrimaryDark - Màu của thanh trạng thái và các thanh ứng dụng theo ngữ cảnh; đây thường là phiên bản tối của colorPrimary.-->
    <!--        colorAccent - Màu của các điều khiển giao diện người dùng như hộp kiểm, nút radio và hộp văn bản chỉnh sửa.-->
    <!--       statusBarColor - Màu của thanh trạng thái.-->
    <!--        colorPrimaryVariant - Một biến thể âm sắc của màu cơ bản. (Giá trị mặc định: # 3700B3)-->
    <style name="Theme.CongThucGiaDinh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/anhnendn</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:colorBackground">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="android:statusBarColor">@color/red</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>
    <style name="Theme.CongThucGiaDinh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>