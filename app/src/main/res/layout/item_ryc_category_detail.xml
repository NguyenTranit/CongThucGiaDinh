<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5dp"
    android:layout_gravity="center"
    android:background="@color/white"

  >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageCate"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            android:adjustViewBounds="true"
            app:riv_corner_radius="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130dp"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shadow_for_love_white"
            android:layout_width="@dimen/_140dp"
            android:layout_height="@dimen/_90dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_item"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5dp"
            android:src="@mipmap/slogan"
             />
        <TextView
            android:text="Meal"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/mealName"
            android:maxLines = "2"
            android:ellipsize = "end"
            android:layout_below="@id/imageCate"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</RelativeLayout>