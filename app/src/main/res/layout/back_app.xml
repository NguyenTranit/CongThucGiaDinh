<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_top_coner_yellow"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_top_coner_red"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_12dp"
            android:text="Hẹn gặp lại bạn lần sau"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_close" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/_320dp"
        android:layout_height="@dimen/_180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/manau6" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adaptive_banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ratingApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/backgroundbottom1"
            android:backgroundTint="@color/green"
            android:padding="@dimen/_10dp"
            android:text=" ĐÁNH GIÁ APP "
            android:textColor="@color/white" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/shareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:background="@drawable/backgroundbottom1"
            android:backgroundTint="@color/orange"
            android:padding="@dimen/_10dp"
            android:text="  CHIA SẺ APP  "
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/ExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/_15dp"
        android:background="@drawable/backgroundbottom1"
        android:backgroundTint="@color/bluefab"
        android:gravity="center"
        android:padding="@dimen/_15dp"
        android:text="THOÁT"
        android:textColor="@color/black" />

</LinearLayout>